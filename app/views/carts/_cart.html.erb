<h2>Ваша корзина</h2>
<table>
	<%= render(cart.line_items) %>
	
	<tr class="total_line">
	    <td colspan="2">Цена</td>
	    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>

<%= button_to 'Очистить', cart, method: :delete,
data: { confirm: 'Are you sure?' } %>
